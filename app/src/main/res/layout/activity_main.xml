                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/debangafont"/>


            </androidx.cardview.widget.CardView>

            <LinearLayout

                android:layout_width="378dp"
                android:layout_height="187dp"
                android:gravity="center"
                android:background="@color/white"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/doubtDiscussion"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView76"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/doubtsection" />

                        <TextView
                            android:id="@+id/textView78"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="8dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/debangafont"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="DOUBT AND DISCUSSION" />



                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/livegrpstudy"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/group_study" />

                        <TextView
                            android:id="@+id/textView845"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="8dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/debangafont"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="LIVE GROUP STUDY" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>





            </LinearLayout>

            <LinearLayout

                android:layout_width="378dp"
                android:layout_height="187dp"
                android:gravity="center"
                android:background="@color/white"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/handwritten"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/mhtcetlogo" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="8dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/debangafont"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="OPTION FORM GENERATOR" />



                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/chattingIconHere"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/chattingicon" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="8dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/debangafont"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="LET'S CONNECT" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>





            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/formulaSheetCardView"
                android:layout_width="320dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                app:cardCornerRadius="6dp"
                android:elevation="6dp"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="#ffff"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
