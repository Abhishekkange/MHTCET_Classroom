<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".userprofiile2">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileshow1234"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/androjet"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewProfileBtn"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:clickable="false"
        android:visibility="invisible"
        android:background="@drawable/profilebuttonback"
        android:text="View Profile"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileshow1234"
        app:layout_constraintVertical_bias="0.052" />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/viewProfileBtn"
        app:layout_constraintStart_toStartOf="@+id/viewProfileBtn"
        app:layout_constraintTop_toBottomOf="@+id/viewProfileBtn">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="#EAEAEA"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/performanceBtn"
                    android:layout_width="90dp"
                    android:background="@drawable/category_back"
                    android:layout_margin="5dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:foregroundGravity="center"
                        android:src="@drawable/performance" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Performance"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/downlaodedBooks"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/category_back"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:foregroundGravity="center"
                        android:src="@drawable/booksimage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Downloaded Books"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leaderBoardBtntw"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:background="@drawable/category_back"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:foregroundGravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/trophy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="LeaderBoard"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/rateUscardBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/category_back"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:foregroundGravity="center"
                        android:src="@drawable/rating" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Rate Us"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/referAndEarnCardBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/category_back"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:foregroundGravity="center"
                        android:src="@drawable/kinglink" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Refer and Earn"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>