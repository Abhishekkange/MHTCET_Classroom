<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".freeCallActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/freeCallName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/category_back"
                android:fontFamily="@font/debangafont"
                android:hint="Enter Your Name"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="#616161" />

            <EditText
                android:id="@+id/freeCallMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/category_back"
                android:fontFamily="@font/debangafont"
                android:hint="Enter Mobile No."
                android:inputType="number"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="#616161" />

            <EditText
                android:id="@+id/freeCallComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/category_back"
                android:fontFamily="@font/debangafont"
                android:gravity="start"
                android:hint="What is your doubt? Why do you want to call ?"
                android:padding="40dp"
                android:textColor="@color/black"
                android:textColorHint="#616161" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/debangafont"
                android:padding="10dp"
                android:text="When Should we call You ?"
                android:textColor="@color/black" />

            <TimePicker
                android:id="@+id/freeCallTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bookFreeCallBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF5151"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:fontFamily="@font/debangafont"
                android:text="BOOK FREE CALL" />
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

