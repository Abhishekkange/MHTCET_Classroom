<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="#FFFFFF"
    android:padding="5dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#F5F5F5"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/newpreviouspaperimage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/mhtcetlogo"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/newPreviousPapersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/debangafont"
                android:padding="10dp"
                android:text="PCM Year 2019"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.398"
                app:layout_constraintStart_toEndOf="@+id/newpreviouspaperimage"
                app:layout_constraintTop_toTopOf="@+id/newpreviouspaperimage" />

            <ImageView
                android:id="@+id/newPreviousYearPaperBookmarkimage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/newPreviousPapersTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/newPreviousPapersTitle"
                app:layout_constraintTop_toTopOf="@+id/newPreviousPapersTitle"
                app:srcCompat="@drawable/bookmark" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/newPreviousyearpaperdownload"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:text="Download"
                android:background="#4CAF50"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/newpreviouspaperimage"
                app:layout_constraintTop_toBottomOf="@+id/newPreviousPapersTitle"
                app:layout_constraintVertical_bias="0.733" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/newPreviousyearpaperOnline"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginStart="4dp"
                android:text="Online"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/newPreviousyearpaperdownload"
                app:layout_constraintStart_toEndOf="@+id/newPreviousyearpaperdownload"
                app:layout_constraintTop_toTopOf="@+id/newPreviousyearpaperdownload"
                app:layout_constraintVertical_bias="0.466" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>