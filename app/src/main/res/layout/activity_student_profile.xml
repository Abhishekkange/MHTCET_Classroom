<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".studentProfile">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="242dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImageShow"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/profileicon"
            android:layout_marginLeft="50dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/greenback"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/lemonbold"
                    android:textColor="@color/white"
                    android:text="Rank :" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:fontFamily="@font/lemonbold"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:text="#1234" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/greenback"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lemonbold"
                    android:paddingLeft="10dp"
                    android:text="Coins" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:fontFamily="@font/lemonbold"
                    android:textColor="@color/white"
                    android:gravity="end"
                    android:layout_marginRight="10dp"
                    android:padding="2dp"
                    android:text="300" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/dollar" />

                <ImageView
                    android:id="@+id/addExtraCoinsBtn"
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/plusicon" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/leaderboardBtn"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:background="@drawable/greenback"
                android:text="LeaderBoard"/>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>